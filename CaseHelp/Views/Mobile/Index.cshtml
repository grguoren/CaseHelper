<script src="/Scripts/js/zx.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        jQuery("#caseno").focus();
    });
    function checkcaseno() {
        var cno = jQuery("#caseno").val();
        var reg = /^[a-z0-9]+$/g;
        if (cno == "") {
            $("#casenoTips").show();
            jQuery("#caseno").focus();
            return false;
        }
        else if (!reg.test(cno)) {
            $("#casenoTips").text('用户名只能由数字和小写字母组成！');
            $("#casenoTips").show();
            jQuery("#caseno").focus();
            return false;
        } else {
            $("#casenoTips").hide();
        }
        //else if (cno.length < 2 || cno.length > 7) {
        //    jQuery("#UserIdtips").text('用户名由2至7位数字或小写字母组成！');
        //    jQuery("#UserIdtips").css("color", "red");
        //    jQuery("#textUserId").focus();
        //    return false;
        //}


        $.ajax({
            url: "/ajax/PostCaseNo",
            type: "post",
            dataType: "text",
            data: { cno: $.trim(jQuery("#caseno").val()) },
            error: function (XmlHttpRequest, textStatus, errorThrown) { },//打印返回错误的上下文
            success: function (d) {
                if (d == "[object XMLDocument]") {
                    $("#casenoTips").hide();
                } else
                    if (d == "1") {
                        $("#casenoTips").text('您的案件不属于我案承办或尚未递交我院！');
                        $("#casenoTips").show();
                        jQuery("#caseno").focus();
                        return false;
                    } else if (d == "2") {
                        $("#casenoTips").text('该案号已提交过资料，请不要重复提交！');
                        $("#casenoTips").show();
                        jQuery("#caseno").focus();
                        return false;
                    } else {
                        $("#casenoTips").hide();
                    }
            }
        });
    }

    function submitanswers()//批量提交所有回答
    {
        var cno = $("#caseno").val();
        var dataBase = {}, qListItems = [];
        if (cno == "")
        {
            alert("请填写案号！");
            return false;
        }
        var hascom = 1;
        $('#quest_ul').children('li').each(function (i) {
        
            var liid = $(this).attr('id');//这是问题的ID
            var sp = liid.split('_');
            var qid = sp[0];
            var qans = "";
            if (sp[1] == 1)
            {
                $(this).find('.tb').each(function (i) {
                    if ($(this).find('div').hasClass("hover"))
                    {
                        var check = $(this).find('.zx-lab-text').text();
                        qans = check;
                    }

                });
            }
            else if (sp[1] == 2) {
                var duoans = "";
                $(this).find('.tb').each(function (i) {
                    if ($(this).find('div').hasClass("hover")) {
                        var check = $(this).find('.zx-lab-text').text();
                        duoans += check + "，";
                    }

                });
                qans = duoans;
            }
            else if (sp[1] == 4 )
            {
                qans = $(this).find('.tab1').val();
            }
            else if (sp[1] == 5) {
                qans = $(this).find('.tab2').val();

            }
            var listItems = {};
            listItems.id = qid;
            listItems.name = qans;
            
            qListItems.push(listItems)
            if (qans == "")//有题未完成
            {
                hascom = 0;
                $("#Tips" + qid).show();
            }
            else {
                $("#Tips" + qid).hide();
            }
        });
        dataBase.qListItems = qListItems;
        var json = JSON.stringify(dataBase);
        //console.log(JSON.stringify(dataBase));
        
        var pid = '@(paper != null?paper.Id:0)';
        aler(pid);
        if (hascom == 1) {
            $.ajax({
                url: "/ajax/AddAnswer",
                type: "post",
                dataType: "text",
                data: { json: json, caseno: cno, pid: pid },
                error: function (XmlHttpRequest, textStatus, errorThrown) { },
                success: function (d) {
                    if (d == "ok") {
                        qy_box('.enddiv');
                    }
                    else if (d == "two") {
                        $("#casenoTips").text('该案号已提交过资料，请不要重复提交！');
                        $("#casenoTips").show();
                        $("#casenoTips").focus();
                    }
                }
            });
        }
    }
    function reloadpage()
    {
        hide_box('.enddiv');
        window.location.reload();
    }
</script>
</body>
</html>

